---
import type { CTABlock } from '@/types';

interface Props {
  block: CTABlock;
}

const { block } = Astro.props;
const { title, description, buttonText, buttonUrl, style = 'primary' } = block;

const styleClasses = {
  primary: 'bg-primary-600 text-white hover:bg-primary-700',
  secondary: 'bg-neutral-800 text-white hover:bg-neutral-900',
  outline: 'bg-transparent border-2 border-primary-600 text-primary-600 hover:bg-primary-50',
};
---

<div class="my-12 rounded-2xl bg-gradient-to-br from-primary-50 via-white to-primary-50 p-8 md:p-12 border border-primary-100">
  <div class="max-w-3xl mx-auto text-center">
    <h3 class="text-2xl md:text-3xl font-display font-bold text-neutral-900 mb-4">
      {title}
    </h3>
    <p class="text-lg text-neutral-600 mb-8">
      {description}
    </p>
    <a
      href={buttonUrl}
      class={`inline-flex items-center justify-center px-8 py-4 text-base font-semibold rounded-lg transition-all shadow-md hover:shadow-lg ${styleClasses[style]}`}
    >
      {buttonText}
      <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>
  </div>
</div>
