---
import type { RelatedLink } from '@/types';

interface Props {
  links: RelatedLink[];
  title?: string;
}

const { links, title = 'Related Resources' } = Astro.props;
---

{links.length > 0 && (
  <div class="my-12">
    <h3 class="text-2xl font-display font-bold text-neutral-900 mb-6">
      {title}
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {links.map((link) => (
        <a
          href={link.url}
          class="group flex gap-4 p-6 bg-white rounded-xl border border-neutral-200 hover:border-primary-300 hover:shadow-md transition-all"
          target={link.url.startsWith('http') ? '_blank' : undefined}
          rel={link.url.startsWith('http') ? 'noopener noreferrer' : undefined}
        >
          {link.imageUrl && (
            <div class="flex-shrink-0 w-20 h-20 rounded-lg overflow-hidden bg-neutral-100">
              <img
                src={link.imageUrl}
                alt={link.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform"
                loading="lazy"
              />
            </div>
          )}
          <div class="flex-1 min-w-0">
            <h4 class="font-semibold text-neutral-900 mb-1 group-hover:text-primary-600 transition-colors">
              {link.title}
            </h4>
            {link.description && (
              <p class="text-sm text-neutral-600 line-clamp-2">
                {link.description}
              </p>
            )}
          </div>
          <div class="flex-shrink-0">
            <svg class="w-5 h-5 text-neutral-400 group-hover:text-primary-600 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
)}
