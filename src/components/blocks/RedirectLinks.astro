---
import type { RedirectLink } from '@/types';

interface Props {
  links: RedirectLink[];
  title?: string;
}

const { links, title = 'Quick Links' } = Astro.props;

// Redirect links go through /r/:slug endpoint for tracking
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://sarlab.pro';
---

{links.length > 0 && (
  <div class="my-12">
    <h3 class="text-2xl font-display font-bold text-neutral-900 mb-6">
      {title}
    </h3>
    <div class="flex flex-wrap gap-3">
      {links.map((link) => (
        <a
          href={`${siteUrl}/r/${link.slug}`}
          class="group inline-flex items-center gap-2 px-5 py-3 bg-white rounded-lg border border-neutral-200 hover:border-primary-300 hover:shadow-md transition-all"
          target="_blank"
          rel="noopener noreferrer"
        >
          {link.icon && (
            <span class="text-xl" aria-hidden="true">
              {link.icon}
            </span>
          )}
          <div class="text-left">
            <div class="font-semibold text-neutral-900 group-hover:text-primary-600 transition-colors">
              {link.title}
            </div>
            {link.description && (
              <div class="text-xs text-neutral-500">
                {link.description}
              </div>
            )}
          </div>
          <svg class="w-4 h-4 text-neutral-400 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      ))}
    </div>
  </div>
)}
