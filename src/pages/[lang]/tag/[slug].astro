---
import type { Language } from '@/types';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumb from '@/components/Breadcrumb.astro';
import PostCard from '@/components/PostCard.astro';
import Pagination from '@/components/Pagination.astro';
import { api } from '@/lib/api';
import { isValidLanguage, t, getCacheHeaders, buildUrl } from '@/lib/utils';

const { lang, slug } = Astro.params;

if (!lang || !isValidLanguage(lang) || !slug) {
  return new Response(null, { status: 404 });
}

const typedLang = lang as Language;

// Fetch settings, posts, and tags in parallel
const [settings, response, tags] = await Promise.all([
  api.getSettings(),
  api.getPosts({ lang: typedLang, page: 1, limit: 12, tagSlug: slug }),
  api.getTags(typedLang),
]);

const { data: posts, total, page, limit } = response;
const totalPages = Math.ceil(total / limit);
const tag = tags.find(t => t.slug === slug);

if (!tag) {
  return new Response(null, { status: 404 });
}

// Set cache headers
Astro.response.headers.set('Cache-Control', getCacheHeaders('list')['Cache-Control']);

const breadcrumbs = [
  { label: t(typedLang, 'home'), href: `/${typedLang}` },
  { label: t(typedLang, 'blog'), href: `/${typedLang}/blog` },
  { label: `#${tag.name}`, href: `/${typedLang}/tag/${slug}` },
];

const alternates = [
  { lang: 'tr' as Language, href: buildUrl('tr', `tag/${slug}`) },
  { lang: 'en' as Language, href: buildUrl('en', `tag/${slug}`) },
  { lang: 'de' as Language, href: buildUrl('de', `tag/${slug}`) },
];
---

<BaseLayout
  lang={typedLang}
  settings={settings}
  seo={{
    title: `#${tag.name} - ${t(typedLang, 'tags')}`,
    description: `${t(typedLang, 'allPosts')} #${tag.name.toLowerCase()}`,
    canonical: buildUrl(typedLang, `tag/${slug}`),
    type: 'website',
    lang: typedLang,
    alternates,
  }}
  currentPath={`/tag/${slug}`}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <Breadcrumb items={breadcrumbs} />

    <header class="mb-12">
      <div class="inline-block px-4 py-2 bg-neutral-100 text-neutral-700 rounded-full text-sm font-medium mb-4">
        {t(typedLang, 'tags')}
      </div>
      <h1 class="text-4xl md:text-5xl font-display font-bold text-neutral-900 mb-4">
        #{tag.name}
      </h1>
      <p class="text-neutral-500">
        {total} {total === 1 ? 'post' : 'posts'}
      </p>
    </header>

    {posts.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-neutral-600 text-lg">{t(typedLang, 'noPosts')}</p>
      </div>
    ) : (
      <>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map(post => (
            <PostCard post={post} lang={typedLang} />
          ))}
        </div>

        <Pagination
          currentPage={page}
          totalPages={totalPages}
          baseUrl={`/${typedLang}/tag/${slug}`}
          lang={typedLang}
        />
      </>
    )}
  </div>
</BaseLayout>
