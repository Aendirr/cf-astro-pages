---
import type { Language } from '@/types';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumb from '@/components/Breadcrumb.astro';
import PostCard from '@/components/PostCard.astro';
import { api } from '@/lib/api';
import { isValidLanguage, t, buildUrl } from '@/lib/utils';

const { lang } = Astro.params;
const searchQuery = Astro.url.searchParams.get('q') || '';

if (!lang || !isValidLanguage(lang)) {
  return Astro.redirect('/tr/search', 301);
}

const typedLang = lang as Language;

// Fetch settings and search results in parallel
const [settings, response] = await Promise.all([
  api.getSettings(),
  searchQuery
    ? api.getPosts({ lang: typedLang, page: 1, limit: 50, search: searchQuery })
    : Promise.resolve({ data: [], total: 0, page: 1, limit: 50 }),
]);

const { data: posts } = response;

const breadcrumbs = [
  { label: t(typedLang, 'home'), href: `/${typedLang}` },
  { label: t(typedLang, 'search'), href: `/${typedLang}/search` },
];

const alternates = [
  { lang: 'tr' as Language, href: buildUrl('tr', 'search') },
  { lang: 'en' as Language, href: buildUrl('en', 'search') },
  { lang: 'de' as Language, href: buildUrl('de', 'search') },
];
---

<BaseLayout
  lang={typedLang}
  settings={settings}
  seo={{
    title: t(typedLang, 'search'),
    description: `${t(typedLang, 'search')} - ${settings.siteName}`,
    canonical: buildUrl(typedLang, 'search'),
    type: 'website',
    lang: typedLang,
    alternates,
    noIndex: true,
  }}
  currentPath="/search"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <Breadcrumb items={breadcrumbs} />

    <header class="mb-12">
      <h1 class="text-4xl md:text-5xl font-display font-bold text-neutral-900 mb-8">
        {t(typedLang, 'search')}
      </h1>

      <form method="get" action={`/${typedLang}/search`} class="max-w-2xl">
        <div class="relative">
          <input
            type="search"
            name="q"
            value={searchQuery}
            placeholder={t(typedLang, 'searchPlaceholder')}
            class="w-full px-6 py-4 pl-14 text-lg border-2 border-neutral-300 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 focus:outline-none transition-colors"
            autofocus
          />
          <svg
            class="absolute left-5 top-1/2 -translate-y-1/2 w-6 h-6 text-neutral-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
      </form>
    </header>

    {searchQuery && (
      <div class="mb-6">
        <p class="text-neutral-600">
          {posts.length > 0
            ? `${posts.length} ${posts.length === 1 ? 'result' : 'results'} for "${searchQuery}"`
            : `${t(typedLang, 'noPosts')} "${searchQuery}"`}
        </p>
      </div>
    )}

    {posts.length > 0 && (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <PostCard post={post} lang={typedLang} />
        ))}
      </div>
    )}

    {!searchQuery && (
      <div class="text-center py-12">
        <svg class="w-24 h-24 mx-auto text-neutral-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <p class="text-neutral-600 text-lg">{t(typedLang, 'searchPlaceholder')}</p>
      </div>
    )}
  </div>
</BaseLayout>
